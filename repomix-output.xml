"use client";

import { useState, useEffect } from "react";
import { db } from "@/lib/firebase"; // Firebase ayar dosyasƒ±
import { doc, getDoc, collection, getDocs } from "firebase/firestore";
import { useParams, useRouter } from "next/navigation";

export default function StudentExamPage() {
  const params = useParams();
  const id = params.id as string; // URL'den sƒ±nav ID'sini alƒ±r
  const router = useRouter();

  // --- Durum Y√∂netimi (State) ---
  const [loading, setLoading] = useState(true);
  const [examData, setExamData] = useState<any>(null);
  const [questions, setQuestions] = useState<any[]>([]);
  
  const [currentIndex, setCurrentIndex] = useState(0); // Hangi sorudayƒ±z?
  const [answers, setAnswers] = useState<{[key: string]: number}>({}); // Verilen cevaplar
  const [timeLeft, setTimeLeft] = useState(0); // Kalan s√ºre (saniye)

  // 1. Verileri Firebase'den √áek
  useEffect(() => {
    const fetchData = async () => {
      if (!id) return;
      try {
        // Sƒ±nav Bilgisi
        const examSnap = await getDoc(doc(db, "exams", id));
        if (examSnap.exists()) {
          const data = examSnap.data();
          setExamData(data);
          setTimeLeft(data.duration * 60); // Dakikayƒ± saniyeye √ßevir
        } else {
            alert("Sƒ±nav bulunamadƒ±!");
            router.push("/");
        }

        // Sorular
        const qRef = collection(db, "exams", id, "questions");
        const qSnap = await getDocs(qRef);
        const qList = qSnap.docs.map(doc => ({ id: doc.id, ...doc.data() }));
        setQuestions(qList);
      } catch (err) {
        console.error("Veri √ßekme hatasƒ±:", err);
      } finally {
        setLoading(false);
      }
    };
    fetchData();
  }, [id, router]);

  // 2. Zamanlayƒ±cƒ± (Timer)
  useEffect(() => {
    if (loading || timeLeft <= 0) return;

    const timer = setInterval(() => {
      setTimeLeft((prev) => {
        if (prev <= 1) {
          clearInterval(timer);
          finishExam(); // S√ºre bitince otomatik bitir
          return 0;
        }
        return prev - 1;
      });
    }, 1000);

    return () => clearInterval(timer);
  }, [loading, timeLeft]);

  // Yardƒ±mcƒ±: S√ºreyi 00:00 formatƒ±na √ßevir
  const formatTime = (seconds: number) => {
    const m = Math.floor(seconds / 60);
    const s = seconds % 60;
    return `${m}:${s < 10 ? '0' : ''}${s}`;
  };

  // Cevap ƒ∞≈üaretleme
  const handleSelectOption = (optionIndex: number) => {
    const currentQ = questions[currentIndex];
    setAnswers(prev => ({
      ...prev,
      [currentQ.id]: optionIndex
    }));
  };

  // Sƒ±navƒ± Bitir
  const finishExam = () => {
    console.log("Sƒ±nav Bitti! Cevaplar:", answers);
    alert("Sƒ±navƒ±nƒ±z tamamlandƒ±! (Sonu√ß ekranƒ± yakƒ±nda eklenecek)");
    router.push("/"); // Ana sayfaya g√∂nder
  };

  if (loading) return <div className="h-screen flex items-center justify-center text-blue-600 font-bold">Sƒ±nav Y√ºkleniyor...</div>;

  if (questions.length === 0) return <div className="h-screen flex items-center justify-center text-gray-500">Bu sƒ±navda hen√ºz soru yok.</div>;

  const currentQuestion = questions[currentIndex];

  return (
    <div className="min-h-screen bg-gray-50 flex flex-col">
      
      {/* √úST BAR */}
      <div className="bg-white border-b border-gray-200 p-4 flex justify-between items-center sticky top-0 z-10 shadow-sm">
        <div>
          <h1 className="font-bold text-lg text-gray-800">{examData?.title}</h1>
          <span className="text-sm text-gray-500">{currentIndex + 1} / {questions.length} Soru</span>
        </div>
        
        {/* Saya√ß */}
        <div className={`font-mono text-xl font-bold px-4 py-2 rounded-lg transition-colors ${timeLeft < 300 ? 'bg-red-100 text-red-600 animate-pulse' : 'bg-blue-50 text-blue-600'}`}>
          {formatTime(timeLeft)}
        </div>
      </div>

      {/* SORU ALANI */}
      <div className="flex-1 max-w-3xl w-full mx-auto p-6">
        <div className="bg-white rounded-2xl shadow-sm border border-gray-200 p-8 min-h-[400px] flex flex-col">
          
          <h2 className="text-xl font-semibold text-gray-900 mb-8 leading-relaxed">
            <span className="text-blue-600 mr-2">#{currentIndex + 1}</span>
            {currentQuestion.text}
          </h2>

          <div className="space-y-3 flex-1">
            {currentQuestion.options.map((opt: string, idx: number) => {
              const isSelected = answers[currentQuestion.id] === idx;
              return (
                <button
                  key={idx}
                  onClick={() => handleSelectOption(idx)}
                  className={`w-full text-left p-4 rounded-xl border-2 transition-all flex items-center gap-4 group outline-none
                    ${isSelected 
                      ? 'border-blue-500 bg-blue-50 text-blue-900 shadow-md' 
                      : 'border-gray-100 hover:border-blue-200 hover:bg-gray-50 text-gray-700'
                    }`}
                >
                  <div className={`w-8 h-8 rounded-full flex items-center justify-center font-bold text-sm border transition-colors
                    ${isSelected ? 'bg-blue-500 text-white border-blue-500' : 'bg-white border-gray-300 text-gray-400 group-hover:border-blue-400 group-hover:text-blue-500'}`}>
                    {String.fromCharCode(65 + idx)}
                  </div>
                  <span className="font-medium">{opt}</span>
                </button>
              );
            })}
          </div>

        </div>
      </div>

      {/* ALT BAR */}
      <div className="bg-white border-t border-gray-200 p-4 sticky bottom-0">
        <div className="max-w-3xl mx-auto flex justify-between items-center">
          
          <button 
            onClick={() => setCurrentIndex(prev => Math.max(0, prev - 1))}
            disabled={currentIndex === 0}
            className="px-6 py-3 rounded-lg font-medium text-gray-600 hover:bg-gray-100 disabled:opacity-50 disabled:cursor-not-allowed transition-colors"
          >
            ‚Üê √ñnceki Soru
          </button>

          {currentIndex === questions.length - 1 ? (
            <button 
              onClick={finishExam}
              className="px-8 py-3 rounded-lg font-bold bg-green-600 text-white hover:bg-green-700 shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-1"
            >
              SINAVI Bƒ∞Tƒ∞R ‚úì
            </button>
          ) : (
            <button 
              onClick={() => setCurrentIndex(prev => Math.min(questions.length - 1, prev + 1))}
              className="px-8 py-3 rounded-lg font-bold bg-blue-600 text-white hover:bg-blue-700 shadow-lg hover:shadow-xl transition-all transform hover:-translate-y-1"
            >
              Sonraki Soru ‚Üí
            </button>
          )}

        </div>
      </div>

    </div>
  );
}
