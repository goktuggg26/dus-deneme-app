      const examData = {
        title: formData.title,
        duration: Number(formData.duration), // Burada da garantilemek i√ßin Number kullandƒ±k
        startTime: Timestamp.fromDate(new Date(formData.date)),
        isActive: true,
        createdAt: Timestamp.now()
