    title: "",
    duration: 120, // varsayƒ±lan 120 dk (SAYI Tƒ∞Pƒ∞NDE)
    date: ""
  });

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault(); 
    setLoading(true);

    try {
